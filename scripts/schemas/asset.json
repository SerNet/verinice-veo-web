{
  "_id": "schemas/asset.json",
  "definitions": {},
  "$schema": "http://verinice.com/veo/draft-01/schema#",
  "type": "object",
  "description": "Schema for assets from ISO 27000",
  "title": "ISO Assets",
  "properties": {
    "$veo.id": {
      "type": "string",
      "title": "The UUID to identify the element",
      "faker": "random.uuid"
    },
    "$veo.type": {
      "description": "The name of the type described by this schema.",
      "enum": ["asset"]
    },
    "$veo.title": {
      "type": "string",
      "title": "The title of the asset",
      "faker": "company.name"
    },
    "parent": {
      "type": "string",
      "title": "The UUID to identify the parent"
    },
    "abbreviation": {
      "type": "string",
      "title": "The abbreviation of the asset"
    },
    "description": {
      "type": "string",
      "title": "Description"
    },
    "assetType": {
      "type": "string",
      "title": "The type of the asset",
      "enum": ["information", "software", "physical", "service", "people"]
    },
    "businessImpactConfidentiality": {
      "type": "string",
      "title": "The business impact on confidentiality of the asset",
      "enum": ["low", "normal", "high", "very-high"]
    },
    "businessImpactIntegrity": {
      "type": "string",
      "title": "The business impact on integrity of the asset",
      "enum": ["low", "normal", "high", "very-high"]
    },
    "businessImpactAvailability": {
      "type": "string",
      "title": "The business impact on availability of the asset",
      "enum": ["low", "normal", "high", "very-high"]
    },
    "privacyControlObjectives": {
      "type": "array",
      "title": "Data privacy control objectives",
      "items": {
        "enum": ["Pseudonymization", "Encryption", "Recoverability"]
      },
      "uniqueItems": true
    }
  },
  "required": ["$veo.id", "$veo.type", "parent", "$veo.title"]
}
