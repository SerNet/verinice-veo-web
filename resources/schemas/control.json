{
  "definitions": {},
  "$schema": "http://verinice.com/veo/draft-01/schema#",
  "type": "object",
  "description": "Schema for control from ISO 27000",
  "title": "ISO Control",
  "properties": {
    "$veo.id": {
      "type": "string",
      "title": "The UUID to identify the element"
    },
    "$veo.type": {
      "description": "The name of the type described by this schema.",
      "enum": ["control"]
    },
    "$veo.title": {
      "type": "string",
      "title": "The title of the asset"
    },
    "parent": {
      "type": "string",
      "title": "The UUID to identify the parent"
    },
    "code": {
      "type": "string",
      "title": "Identification code"
    },
    "description": {
      "type": "string",
      "title": "Description"
    },
    "tags": {
      "title": "Tags",
      "description": "Tags to filter by.",
      "type": "array",
      "items": {
        "type": "string"
      },
      "uniqueItems": true
    },
    "implementationStatus": {
      "title": "Implementation Status",
      "enum": ["unedited", "yes", "no", "partially", "n.a."]
    },
    "implementationDate": {
      "title": "Implementation Date",
      "type": "string",
      "format": "date-time"
    }
  },
  "required": ["$veo.id", "$veo.type", "parent", "$veo.title"]
}
