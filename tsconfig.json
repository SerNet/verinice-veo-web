{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "es2015"],
    "typeRoots": ["./types/", "./node_modules/@types"],
    "module": "esNext",
    "moduleResolution": "node",
    "experimentalDecorators": false,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "removeComments": true,
    "suppressImplicitAnyIndexErrors": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "*": ["./*", "types/*"],
      "~/": ["./"],
      "~/assets/*": ["./assets/*"],
      "~/config/*": ["./config/*"],
      "~/components/*": ["./components/*"],
      "~/widgets/*": ["./widgets/*"],
      "~/lib/*": ["./lib/*"],
      "~/middleware/*": ["./middleware/*"],
      "~/mixins/*": ["./mixins/*"],
      "~/models/*": ["./models/*"],
      "~/pages/*": ["./pages/*"],
      "~/plugins/*": ["./plugins/*"],
      "~/static/*": ["./static/*"],
      "~/store/*": ["./store/*"],
      "~/types/*": ["./types/*"]
    }
  }
}
