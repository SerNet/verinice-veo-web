{
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "declaration": false,
    "moduleResolution": "node",
    "lib": ["esnext", "esnext.asynciterable", "dom"],
    "esModuleInterop": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./*"]
    },
    "typeRoots": [],
    "types": [
      "mocha",
      "@types/node",
      "@types/lodash",
      "@types/jest",
      "@nuxtjs/axios",
      "@nuxt/types",
      "nuxt-i18n/types",
      "./types/context",
      "vuetify/types",
      "./types/vue-json-pointer"
    ]
  },
  "exclude": ["coverage",".nuxt", ".gitlab", "dist", "test/e2e"]
}
