{
  "exclude": [".nuxt", ".vscode", "dist", "dist.js", "node_modules", "store_bk"],

  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "lib": ["esnext", "esnext.asynciterable", "dom"],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./*"]
    },
    "types": [
      "vuetify",
      "vuetify/types/index",
      "@types/node",
      "@nuxt/vue-app",
      "types/nuxt",
      "@nuxtjs/axios/types",
      "axios-retry/index",
      "cookie-universal-nuxt/types/index"
    ]
  }
}
